<resources>

    <!-- Splash theme.-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="textColorError">@color/design_textinput_error_color_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">DroidSerif-Italic.ttf</item>
    </style>


    <!-- 登录、注册、忘记密码 ToolBar -->
    <style name="MainToolBarStyle" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/whitesmoke</item>
        <item name="android:textColorSecondary">@color/whitesmoke</item>
        <item name="actionMenuTextColor">@color/whitesmoke</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Theme.AppCompat">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Search ToolBar -->
    <style name="SearchToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <!--登录注册界面按钮样式-->
    <style name="MainButtonsStyle" parent="Theme.AppCompat">
        <item name="android:background">@drawable/main_button_selector</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/whitesmoke</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--登录注册界面文本框容器样式-->
    <style name="MainEditTextHolderStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <!--登录注册界面文本框样式-->
    <style name="MainEditTextStyle" parent="Theme.AppCompat">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/whitesmoke</item>
    </style>

    <!--登录注册界面文本框主题-->
    <style name="MainEditTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white_with_alpha</item>
        <item name="android:textColorHint">@color/whitesmoke</item>
        <item name="colorControlNormal">@color/whitesmoke</item>
        <item name="colorControlActivated">@color/whitesmoke</item>
        <item name="colorControlHighlight">@color/whitesmoke</item>
        <item name="errorTextAppearance">@color/design_textinput_error_color_light</item>
    </style>

    <!-- 顶部导航栏标题样式-->
    <style name="MainToolbarTitleStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/whitesmoke</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- 底部菜单栏样式 -->
    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <!-- 所有界面背景样式 -->
    <style name="user_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#F0F3F6</item>
    </style>

    <!-- 标题栏文字样式 -->
    <style name="user_title_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 用户栏样式 -->
    <style name="user_top_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 头像样式 -->
    <style name="user_portrait_layout">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- 用户名样式-->
    <style name="user_info_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- 盒样式 -->
    <style name="user_wrap_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- 用户界面选择条样式 -->
    <style name="user_option_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/user_row_selector</item>
    </style>

    <!-- 用户界面小图标样式 -->
    <style name="user_icon_layout">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- 用户界面样式 -->
    <style name="user_text">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 分割线样式 -->
    <style name="user_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/lightgray</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <!-- 顶端线底端线样式 -->
    <style name="user_edgeline">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/lightgray</item>
    </style>

    <!-- 箭头样式 -->
    <style name="user_img_arrow">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/arrow</item><!-- 箭头图片 -->
    </style>

    <style name="user_img_big_arrow" parent="@style/user_img_arrow">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>


    <!-- 欢迎界面logo样式 -->
    <style name="welcome_logo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:src">@drawable/welcome_logo_new</item>
    </style>

    <!--欢迎界面button样式 -->
    <style name="welcome_button">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/welcome_buttom</item>
    </style>

    <!-- 欢迎词 -->
    <style name="welcome_word">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/welcome</item>
    </style>

    <!--旋转条 -->
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 头像界面缩放动画 -->
    <style name="AnimTheme">
        <item name="android:windowAnimationStyle">@style/PortraitTheme</item>
    </style>

    <style name="PortraitTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/portrait_in</item>
        <item name="android:activityCloseExitAnimation">@anim/portrait_out</item>
    </style>


    <style name="ViewPageHeaderStyle">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="coupon_label_text">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="coupon_detail_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="coupon_wrap_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- 搜索界面推荐 -->
    <style name="search_rec_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="BottomDialog" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/sellmenu_in</item>
        <item name="android:windowExitAnimation">@anim/sellmenu_out</item>
    </style>

    <style name="coupon_form_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchResultSortText">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>
    </style>


    <!--Progress Wheel 样式 -->
    <declare-styleable name="ProgressWheel">
        <attr name="pwText" format="string" />
        <attr name="pwTextColor" format="color" />
        <attr name="pwTextSize" format="dimension" />
        <attr name="pwBarColor" format="color" />
        <attr name="pwRimColor" format="color" />
        <attr name="pwRimWidth" format="dimension" />
        <attr name="pwSpinSpeed" format="integer" />
        <attr name="pwCircleColor" format="color" />
        <attr name="pwRadius" format="dimension" />
        <attr name="pwBarWidth" format="dimension" />
        <attr name="pwBarLength" format="dimension" />
        <attr name="pwDelayMillis" format="dimension"/>
        <attr name="pwContourColor" format="color"/>
        <attr name="pwContourSize" format="float"/>
    </declare-styleable>

    <!-- fab style -->
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
