<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="textColorError">@color/design_textinput_error_color_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 登录、注册、忘记密码 ToolBar -->
    <style name="MainToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/whitesmoke</item>
        <item name="android:textColorSecondary">@color/whitesmoke</item>
        <item name="actionMenuTextColor">@color/whitesmoke</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Theme.AppCompat">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Search ToolBar -->
    <style name="SearchToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/whitesmoke</item>
        <item name="android:textColorSecondary">@color/whitesmoke</item>
        <item name="actionMenuTextColor">@color/whitesmoke</item>
    </style>

    <!--登录注册界面按钮样式-->
    <style name="MainButtonsStyle" parent="Theme.AppCompat">
        <item name="android:background">@drawable/main_buttons_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/whitesmoke</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--登录注册界面文本框样式-->
    <style name="MainEditTextStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- 顶部导航栏标题样式-->
    <style name="MainToolbarTitleStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/whitesmoke</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- 底部菜单栏样式 -->
    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <!-- 所有界面背景样式 -->
    <style name="user_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#F0F3F6</item>
    </style>

    <!-- 标题栏文字样式 -->
    <style name="user_title_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 用户栏样式 -->
    <style name="user_top_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 头像样式 -->
    <style name="user_portrait_layout">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <!-- 用户名样式-->
    <style name="user_info_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- 盒样式 -->
    <style name="user_wrap_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 用户界面选择条样式 -->
    <style name="user_row_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/user_row_selector</item>
    </style>

    <!-- 用户界面小图标样式 -->
    <style name="user_icon_layout">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- 用户界面样式 -->
    <style name="user_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 分割线样式 -->
    <style name="user_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <!-- 顶端线底端线样式 -->
    <style name="user_edgeline">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/lightgray</item>
    </style>

    <!-- 箭头样式 -->
    <style name="user_img_arrow">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/arrow</item><!-- 箭头图片 -->
    </style>

    <style name="user_img_big_arrow" parent="@style/user_img_arrow">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="uwal_top_layout" parent="@style/user_top_layout">
        <item name="android:layout_height">80dp</item>
    </style>

    <!-- 欢迎界面logo样式 -->
    <style name="welcome_logo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:src">@drawable/plus</item>
    </style>

    <!--欢迎界面button样式 -->
    <style name="welcome_button">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/welcome_buttom</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- 欢迎词 -->
    <style name="welcome_word">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/welcome</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
