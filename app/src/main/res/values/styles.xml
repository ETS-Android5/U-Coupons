<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Register ToolBar -->
    <style name="RegisterToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/whitesmoke</item>
        <item name="android:textColorSecondary">@color/whitesmoke</item>
        <item name="actionMenuTextColor">@color/whitesmoke</item>
    </style>

    <!-- Search ToolBar -->
    <style name="SearchToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/whitesmoke</item>
        <item name="android:textColorSecondary">@color/whitesmoke</item>
        <item name="actionMenuTextColor">@color/whitesmoke</item>
    </style>
</resources>
