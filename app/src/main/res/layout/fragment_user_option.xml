<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            >

            <FrameLayout
                android:id="@+id/main.framelayout.title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                >

                <LinearLayout
                    android:id="@+id/main.linearlayout.title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="12dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="bottom|center_horizontal"
                        android:text="一个懒得起名字的懒人"
                        android:textColor="@android:color/white"
                        android:textSize="30dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="居然连手机号也没有_(:з」∠)_"
                        android:textColor="@android:color/white"
                        />

                </LinearLayout>
            </FrameLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/user_wrap_layout"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/user_to_mycoupons"
                    style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_mycoupon" />

                    <ImageView style="@style/user_img_arrow" />
                </LinearLayout>

                <ImageView style="@style/user_divider" />

                <LinearLayout
                    android:id="@+id/user_to_wal"
                    style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_mywallet" />

                    <TextView
                        android:id="@+id/user_ub"
                        style="@style/user_text"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0"
                        android:textColor="@color/gray" />

                    <ImageView
                        style="@style/user_icon_layout"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="0dp"
                        android:src="@drawable/plus" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/user_wrap_layout">

                <ImageView style="@style/user_edgeline" />

                <LinearLayout style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_sell" />

                    <ImageView style="@style/user_img_arrow" />
                </LinearLayout>

                <ImageView style="@style/user_divider" />

                <LinearLayout style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_buy" />

                    <ImageView style="@style/user_img_arrow" />
                </LinearLayout>

                <ImageView style="@style/user_divider" />

                <LinearLayout style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_collect" />

                    <ImageView style="@style/user_img_arrow" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/user_wrap_layout">

                <ImageView style="@style/user_edgeline" />

                <LinearLayout
                    android:id="@+id/user_to_set"
                    style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_settings" />

                    <ImageView style="@style/user_img_arrow" />
                </LinearLayout>

                <ImageView style="@style/user_divider" />

                <LinearLayout style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_help" />

                    <ImageView style="@style/user_img_arrow" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/user_wrap_layout">

                <ImageView style="@style/user_edgeline" />

                <LinearLayout
                    android:id="@+id/user_logoff"
                    style="@style/user_option_layout">

                    <TextView
                        style="@style/user_text"
                        android:gravity="center"
                        android:text="@string/uopt_logoff"
                        android:textColor="@color/red" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/main.toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_anchor="@id/main.collapsing"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <Space
                android:layout_width="32dp"
                android:layout_height="32dp"
                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/main.textview.title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="个人信息"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/userinfo_toolbar_right_text"
                android:text="修改"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_gravity="right|center_vertical"
                android:gravity="right"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <com.example.administrator.ccoupons.Tools.XCRoundImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@mipmap/android"
        android:id="@+id/user_portrait"
        app:finalHeight="32dp"
        app:finalXPosition="12dp"
        app:finalYPosition="12dp"
        app:finalToolbarHeight="?attr/actionBarSize"
        app:layout_behavior="com.example.administrator.ccoupons.UI.AvatarImageBehavior"
        />

</android.support.design.widget.CoordinatorLayout>