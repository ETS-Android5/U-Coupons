<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/user_bg">

    <LinearLayout
        android:id="@+id/user_to_inf"
        style="@style/user_wrap_layout"
        android:elevation="3dp"
        android:layout_marginBottom="0dp">

        <LinearLayout style="@style/user_top_layout">

            <com.example.administrator.ccoupons.Tools.XCRoundImageView
                android:id="@+id/user_portrait"
                style="@style/user_portrait_layout" />

            <LinearLayout style="@style/user_info_layout">

                <TextView
                    style="@style/user_text"
                    android:text="用户名"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <TextView
                    style="@style/user_text"
                    android:text="电话号"
                    android:textColor="@color/white" />
            </LinearLayout>

            <ImageView style="@style/user_img_big_arrow" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/user_wrap_layout"
                android:layout_marginTop="20dp">

                <LinearLayout style="@style/user_option_layout"
                    android:id="@+id/user_to_mycoupons">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_mycoupon" />

                    <ImageView style="@style/user_img_arrow" />
                </LinearLayout>

                <ImageView style="@style/user_divider" />

                <LinearLayout
                    android:id="@+id/user_to_wal"
                    style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_mywallet" />

                    <TextView
                        android:id="@+id/user_ub"
                        style="@style/user_text"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0"
                        android:textColor="@color/gray" />

                    <ImageView
                        style="@style/user_icon_layout"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="0dp"
                        android:src="@drawable/plus" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/user_wrap_layout">

                <ImageView style="@style/user_edgeline" />

                <LinearLayout style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_sell" />

                    <ImageView style="@style/user_img_arrow" />
                </LinearLayout>

                <ImageView style="@style/user_divider" />

                <LinearLayout style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_buy" />

                    <ImageView style="@style/user_img_arrow" />
                </LinearLayout>

                <ImageView style="@style/user_divider" />

                <LinearLayout style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_collect" />

                    <ImageView style="@style/user_img_arrow" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/user_wrap_layout">

                <ImageView style="@style/user_edgeline" />

                <LinearLayout
                    android:id="@+id/user_to_set"
                    style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_settings" />

                    <ImageView style="@style/user_img_arrow" />
                </LinearLayout>

                <ImageView style="@style/user_divider" />

                <LinearLayout style="@style/user_option_layout">

                    <ImageView
                        style="@style/user_icon_layout"
                        android:src="@mipmap/pos" />

                    <TextView
                        style="@style/user_text"
                        android:text="@string/uopt_help" />

                    <ImageView style="@style/user_img_arrow" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/user_wrap_layout">

                <ImageView style="@style/user_edgeline" />

                <LinearLayout
                    android:id="@+id/user_logoff"
                    style="@style/user_option_layout">

                    <TextView
                        style="@style/user_text"
                        android:gravity="center"
                        android:text="@string/uopt_logoff"
                        android:textColor="@color/red" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>