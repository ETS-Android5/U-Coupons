<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/user_bg">


    <android.support.v7.widget.Toolbar
        android:id="@+id/uinf_toolbar"
        android:layout_width="match_parent"

        <TextView
            style="@style/user_title_text"
            android:layout_gravity="center"
            android:text="@string/uinf_title" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout style="@style/user_wrap_layout">

        <LinearLayout
            android:id="@+id/change_portrait"
            style="@style/user_option_layout">

            <com.example.administrator.ccoupons.Tools.XCRoundImageView
                android:id="@+id/uinf_portrait"
                style="@style/user_portrait_layout"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="15dp" />

            <TextView
                style="@style/user_text"
                android:text="@string/uinf_changeportrait"
                android:textSize="20dp" />

            <ImageView style="@style/user_img_arrow" />
        </LinearLayout>



















        </LinearLayout>
</LinearLayout>
