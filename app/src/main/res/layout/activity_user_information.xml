<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/user_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/uinf_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            style="@style/user_title_text"
            android:layout_gravity="center"
            android:text="@string/uinf_title" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout style="@style/user_wrap_layout">

        <LinearLayout
            android:id="@+id/change_portrait"
            style="@style/user_option_layout">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/uinf_portrait"
                android:src="@drawable/mascot_nothing"
                style="@style/user_portrait_layout"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="15dp" />

            <TextView
                style="@style/user_text"
                android:text="@string/uinf_changeportrait"
                android:textSize="20dp" />

            <ImageView style="@style/user_img_arrow" />
        </LinearLayout>

        <ImageView
            style="@style/user_divider" />

        <LinearLayout style="@style/user_option_layout"
            android:id="@+id/to_update_nickname">

            <TextView
                android:id="@+id/user_name"
                style="@style/user_text" />
        </LinearLayout>

        <ImageView style="@style/user_divider" />

        <LinearLayout style="@style/user_option_layout"
            android:id="@+id/to_update_gender">

            <TextView
                android:id="@+id/user_sex"
                style="@style/user_text" />
        </LinearLayout>

        <ImageView style="@style/user_divider" />

    </LinearLayout>

    <LinearLayout style="@style/user_wrap_layout">

        <ImageView style="@style/user_edgeline" />

        <LinearLayout style="@style/user_option_layout"
            android:id="@+id/to_update_phone">

            <TextView
                style="@style/user_text"
                android:text="@string/uinf_changephone" />

            <ImageView style="@style/user_img_arrow" />
        </LinearLayout>

        <ImageView style="@style/user_divider" />

        <LinearLayout style="@style/user_option_layout"
            android:id="@+id/uinf_to_resetpw">

            <TextView
                style="@style/user_text"
                android:text="@string/uinf_changekey" />

            <ImageView style="@style/user_img_arrow" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
