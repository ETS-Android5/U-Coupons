<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/user_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/uwal_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/uwal_title"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/user_wallet_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="说明"
            android:textSize="15dp" />


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            style="@style/user_text"
            android:text="@string/uwal_ub"
            android:textColor="@color/white"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/uwal_ub"

            style="@style/user_text"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <ImageView
            style="@style/user_icon_layout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/plus" />
    </LinearLayout>

    <Button
        android:id="@+id/button_purchase_ub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:paddingBottom="5dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="5dp"
        android:layout_marginTop="30dp"
        android:text="充值U币"
        android:textColor="@color/white"
        android:textSize="25dp" />


</LinearLayout>
