<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/user_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/uwal_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/coupon_info"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/follow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:src="@drawable/message_icon" />


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_with_alpha">

                <ImageView
                    android:id="@+id/coupon_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_cover_4"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <ImageView style="@style/user_edgeline" />

            <LinearLayout style="@style/coupon_wrap_layout">



                    <TextView
                        android:id="@+id/coupon_name"
                        style="@style/coupon_text"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:text="宇宙银河系太阳系地球超级无敌疯狂大型飞机杯"
                        android:textSize="28dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/message_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="名字就是要长长长长长长长长才霸气"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/coupon_list_price"
                    style="@style/coupon_text"
                    android:paddingBottom="0dp"
                    android:text="￥100"
                    android:textColor="@color/orangered"
                    android:textSize="35dp" />

                <TextView
                    android:id="@+id/coupon_evaluate_price"
                    style="@style/coupon_text"
                    android:text="估值：￥90"
                    android:textColor="@color/orangered"
                    android:textSize="20dp" />

            </LinearLayout>

            <ImageView style="@style/user_edgeline" />

            <LinearLayout style="@style/coupon_wrap_layout">

                <TextView
                    android:id="@+id/coupon_discount_price"
                    style="@style/coupon_text"
                    android:text="优惠额度 : ￥200"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView style="@style/user_edgeline" />

            <LinearLayout style="@style/coupon_wrap_layout">

                <TextView
                    android:id="@+id/coupon_business_name"
                    style="@style/coupon_text"
                    android:layout_marginBottom="15dp"
                    android:text="商家名：KFC"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView style="@style/user_divider" />

                <TextView
                    android:id="@+id/coupon_expire_date"
                    style="@style/coupon_text"
                    android:layout_marginTop="15dp"
                    android:text="使用期限：2017/7/22"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout style="@style/coupon_wrap_layout">

                <TextView
                    android:id="@+id/coupon_use_limit"
                    style="@style/coupon_text"
                    android:layout_marginBottom="15dp"
                    android:text="使用限制：满50可用"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
