<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/user_bg"
    tools:context="com.example.administrator.ccoupons.Purchase.CouponPurchaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/coupon_purchase_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:theme="@style/SearchToolBarStyle">

            <TextView
                style="@style/MainToolbarTitleStyle"
                android:text="确认订单" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/purchase_coupon_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="15dp"
                android:background="@color/gainsboro"
                android:src="@drawable/mascot_nothing" />


            <TextView
                android:id="@+id/purchase_coupon_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="无良前端陈中津"
                android:textColor="@color/black"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/coupon_label_text"
                android:padding="10dp"
                android:paddingLeft="15dp"
                android:text="优惠额度: " />

            <TextView
                style="@style/coupon_detail_text"
                android:gravity="right"
                android:id="@+id/purchase_discount_text"
                android:paddingRight="20dp"
                android:layout_gravity="center"
                android:text="屠龙宝刀点击就送" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingLeft="15dp"
                android:text="使用门槛: "
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/purchase_constraints_text"
                android:text="1.陈中津别水群了\n2.陈中津快去写BUG\n3.陈中津怎么又写了个BUG\n4.陈中津又DE出了一个BUG"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:text="价格: " />

            <TextView
                android:id="@+id/purchase_price_text"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="¥100"
                android:textSize="20dp"
                android:padding="10dp"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/purchase_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="确认支付"
        android:textColor="@color/whitesmoke"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
