<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_register_bg"
    android:orientation="vertical"
    android:theme="@style/MainEditTextTheme"
    tools:context="com.example.administrator.ccoupons.Main.ResetPasswordActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/reset_pass_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/MainToolBarStyle">

        <TextView
            style="@style/MainToolbarTitleStyle"
            android:text="@string/reset_password_title" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_username" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/reset_phone_inputlayout"
                style="@style/MainEditTextHolderStyle">>

                <EditText
                    android:id="@+id/reset_phone_edittext"
                    style="@style/MainEditTextStyle"
                    android:digits="1234567890"
                    android:hint="@string/login_name_hint"
                    android:inputType="number"
                    android:maxLength="11" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_identify" />

            <android.support.design.widget.TextInputLayout

                android:id="@+id/reset_cord_inputlayout"
                style="@style/MainEditTextHolderStyle"
                android:layout_width="0dp"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/reset_cord_edittext"
                    style="@style/MainEditTextStyle"
                    android:digits="1234567890"
                    android:hint="@string/check_string"
                    android:inputType="number"
                    android:maxLength="4" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/request_cord_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1.5"
                android:background="@drawable/button_get_identifyid"
                android:gravity="center"
                android:text="@string/get_identifyid_text"
                android:textColor="@color/whitesmoke"
                android:textSize="16dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_password" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/reset_newpass_inputlayout"
                style="@style/MainEditTextHolderStyle">

                <com.example.administrator.ccoupons.CustomEditText.PasswordToggleEditText
                    android:id="@+id/reset_newpass_edittext"
                    style="@style/MainEditTextStyle"
                    android:hint="@string/reset_new_password_string"
                    android:inputType="textPassword"
                    android:maxLength="16" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_confirmpassword" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/reset_confirmpass_inputlayout"
                style="@style/MainEditTextHolderStyle">

                <com.example.administrator.ccoupons.CustomEditText.PasswordToggleEditText
                    android:id="@+id/reset_confirmpass_edittext"
                    style="@style/MainEditTextStyle"
                    android:hint="@string/reset_password_confirm_string"
                    android:inputType="textPassword"
                    android:maxLength="16" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/reset_button_ok"
            style="@style/MainButtonsStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/reset_confirm_buttontext" />
    </LinearLayout>

</LinearLayout>
