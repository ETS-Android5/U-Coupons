<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="搜索常见分类"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_rec_furniture"
            style="@style/search_rec_text"
            android:text="家具家居" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <include layout="@layout/search_rec_divider" />

            <TextView
                android:id="@+id/search_rec_daily"
                style="@style/search_rec_text"
                android:text="生活百货" />

            <include layout="@layout/search_rec_divider" />

        </LinearLayout>

        <TextView
            android:id="@+id/search_rec_food"
            style="@style/search_rec_text"
            android:text="饮食保健" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_rec_cloth"
            style="@style/search_rec_text"
            android:text="服装装饰" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <include layout="@layout/search_rec_divider" />

            <TextView
                android:id="@+id/search_rec_electronics"
                style="@style/search_rec_text"
                android:text="电子产品" />

            <include layout="@layout/search_rec_divider" />

        </LinearLayout>

        <TextView
            android:id="@+id/search_rec_travel"
            style="@style/search_rec_text"
            android:text="旅行住宿" />

    </LinearLayout>
</LinearLayout>