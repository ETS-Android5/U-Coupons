<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/user_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/user_update_gender_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            style="@style/user_title_text"
            android:layout_gravity="center"
            android:text="@string/user_update_gender" />

        <TextView
            android:id="@+id/user_update_gender"
            style="@style/user_title_text"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="@string/user_update"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="选择性别:"
            android:gravity="center"
            android:textSize="24dp"

            />
        <RadioGroup
            android:id="@+id/user_update_gender_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:contentDescription="性别">

            <RadioButton
                android:id="@+id/radio_button_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="男"/>

            <RadioButton
                android:id="@+id/radio_button_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="女"/>

        </RadioGroup>
    </LinearLayout>

</LinearLayout>