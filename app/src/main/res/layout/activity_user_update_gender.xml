<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/user_bg"
    android:background="@drawable/login_register_bg"
    android:theme="@style/MainEditTextTheme">

    <android.support.v7.widget.Toolbar
        android:id="@+id/user_update_gender_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            style="@style/user_title_text"
            android:layout_gravity="center"
            android:text="@string/user_update_gender" />

        <TextView
            android:id="@+id/user_update_gender"
            style="@style/user_title_text"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="@string/user_update" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/user_update_gender_radio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:contentDescription="性别"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:height="40dp"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/gender_male_radio_btn"
                android:drawablePadding="30dp"
                android:text="男"
                android:textColor="@color/whitesmoke"
                android:textSize="24dp" />

            <RadioButton
                android:id="@+id/radio_button_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:height="40dp"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/gender_female_radio_btn"
                android:drawablePadding="30dp"
                android:text="女"
                android:textColor="@color/whitesmoke"
                android:textSize="24dp" />

        </RadioGroup>
    </LinearLayout>

</LinearLayout>