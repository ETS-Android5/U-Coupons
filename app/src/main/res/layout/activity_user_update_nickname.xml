<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/user_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/user_update_nickname_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            style="@style/user_title_text"
            android:layout_gravity="center"
            android:text="@string/user_update_nickname" />

        <TextView
            android:id="@+id/user_update_nickname"
            style="@style/user_title_text"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="@string/user_update"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="输入昵称:"
            android:textSize="24dp"
            />

        <com.example.administrator.ccoupons.CustomEditText.ClearableEditText
            android:id="@+id/update_nickname_edit"
            style="@style/MainEditTextStyle"
            android:textColorHint="@color/colorAccent"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1" />

    </LinearLayout>
</LinearLayout>
