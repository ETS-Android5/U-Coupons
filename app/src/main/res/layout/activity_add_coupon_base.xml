<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/add_coupon_root"
    tools:context="com.example.administrator.ccoupons.AddCoupon.AddCouponBaseActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/MainToolBarStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_addcoupon_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="返回"
                android:textColor="@color/whitesmoke"
                android:textSize="18dp" />

            <TextView
                style="@style/MainToolbarTitleStyle"
                android:layout_centerHorizontal="true"
                android:text="添加优惠券" />

            <TextView
                android:id="@+id/tv_addcoupon_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="下一步"
                android:textColor="@color/whitesmoke"
                android:textSize="18dp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add_progress_img"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_addcoupon_step1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"
                android:text="基本信息"/>

            <TextView
                android:id="@+id/tv_addcoupon_step2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"
                android:text="优惠信息"/>

            <TextView
                android:id="@+id/tv_addcoupon_step3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"
                android:text="确认价格"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
