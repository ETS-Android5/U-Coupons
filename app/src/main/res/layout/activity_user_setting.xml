<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/user_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/uset_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView style="@style/user_title_text"
            android:layout_gravity="center"
            android:text="@string/uset_title"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout style="@style/user_wrap_layout">
        <ImageView style="@style/user_edgeline"/>
        <LinearLayout style="@style/user_row_layout"
            android:id="@+id/uset_clear">
            <TextView style="@style/user_text"
                android:textColor="@color/red"
                android:gravity="center"
                android:text="@string/uset_clear" />
        </LinearLayout>
        <ImageView style="@style/user_edgeline"/>
    </LinearLayout>
</LinearLayout>
